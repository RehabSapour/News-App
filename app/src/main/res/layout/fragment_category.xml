<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.category"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_gravity="center"
            android:orientation="vertical">

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="29sp"-->
<!--                android:fontFamily="sans-serif-condensed"-->
<!--                android:textStyle="bold"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:padding="15dp"-->
<!--                android:layout_weight="1"-->
<!--                android:textColor="@color/black"-->
<!--                android:text="@string/pick"/>-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="0"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/sports_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_horizontal"
                    app:cardPreventCornerOverlap="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/ActionBar"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/bluefootball" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:text="@string/sports"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/science_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_horizontal"
                    app:cardPreventCornerOverlap="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/ActionBar"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="100dp"
                            android:background="@color/white"
                            android:src="@drawable/science"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_horizontal"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            android:text="@string/science" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_weight="0"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/business_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="20dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal"
                    app:cardPreventCornerOverlap="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/ActionBar"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="100dp"
                            android:background="@color/white"
                            android:src="@drawable/business2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            android:text="@string/business" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/technology_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    app:cardPreventCornerOverlap="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/ActionBar"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/social"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:maxLines="1"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            android:text="@string/technology" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="0"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/health_cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    app:cardPreventCornerOverlap="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/ActionBar"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/health" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            android:text="@string/health" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/entertainment_cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    app:cardPreventCornerOverlap="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/ActionBar"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="100dp"
                            android:src="@drawable/entertainment"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_horizontal"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            android:text="@string/entertainment" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>